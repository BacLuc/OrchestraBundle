{% extends 'RomaricDrigonOrchestraBundle::base.html.twig' %}

{% block title %}
    {{ orchestra_app_title }} - {{ title }}
{% endblock title %}

{% block content %}
    <h1>{{ title }}</h1>

    {% block table %}
        <div class="table-responsive">
            <table class="table table-hover">
                {% block table_header %}
                    <thead>
                        <tr>
                            {% for header in headers %}
                                <th></th>
                            {% endfor %}
                        </tr>
                    </thead>
                {% endblock table_header %}
                {% block table_body %}
                    <tbody>
                        {% for object in objects %}
                            {% set view = object.viewListing %}
                            <tr>
                                {% for field in view %}
                                    <td></td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                    </tbody>
                {% endblock table_body %}
            </table>
        </div>
    {% endblock table %}
{% endblock content %}