<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="orchestra.pool.repository_pool.class">RomaricDrigon\OrchestraBundle\Core\Pool\RepositoryPool</parameter>
        <parameter key="orchestra.pool.entity_pool.class">RomaricDrigon\OrchestraBundle\Core\Pool\EntityPool</parameter>
        <parameter key="orchestra.pool.entity_pool_factory.class">RomaricDrigon\OrchestraBundle\Core\Pool\EntityPoolFactory</parameter>
        <parameter key="orchestra.core_repository.action_builder.class">RomaricDrigon\OrchestraBundle\Core\Repository\Action\RepositoryActionBuilder</parameter>
        <parameter key="orchestra.core_repository.action_collection_builder.class">RomaricDrigon\OrchestraBundle\Core\Repository\Action\RepositoryActionCollectionBuilder</parameter>
        <parameter key="orchestra.core_entity.action_builder.class">RomaricDrigon\OrchestraBundle\Core\Entity\Action\EntityActionBuilder</parameter>
        <parameter key="orchestra.core_entity.action_collection_builder.class">RomaricDrigon\OrchestraBundle\Core\Entity\Action\EntityActionCollectionBuilder</parameter>

        <parameter key="orchestra.doctrine.repository_finder.class">RomaricDrigon\OrchestraBundle\Doctrine\DoctrineRepositoryFinder</parameter>
        <parameter key="orchestra.doctrine.repository_injecter.class">RomaricDrigon\OrchestraBundle\Doctrine\DoctrineInjecter</parameter>
        <parameter key="orchestra.doctrine.object_manager.class">RomaricDrigon\OrchestraBundle\Doctrine\ObjectManager</parameter>

        <parameter key="orchestra.routing.repository_route_builder.class">RomaricDrigon\OrchestraBundle\Routing\RepositoryRouteBuilder</parameter>
        <parameter key="orchestra.routing.entity_route_builder.class">RomaricDrigon\OrchestraBundle\Routing\EntityRouteBuilder</parameter>
        <parameter key="orchestra.routing.repository_route_collection_builder.class">RomaricDrigon\OrchestraBundle\Routing\RepositoryRouteCollectionBuilder</parameter>
        <parameter key="orchestra.routing.entity_route_collection_builder.class">RomaricDrigon\OrchestraBundle\Routing\EntityRouteCollectionBuilder</parameter>
        <parameter key="orchestra.routing.route_loader.class">RomaricDrigon\OrchestraBundle\Routing\OrchestraRouteLoader</parameter>

        <parameter key="orchestra.menu.repository_menu.class">RomaricDrigon\OrchestraBundle\Menu\RepositoryMenu</parameter>
        <parameter key="orchestra.menu.knp_builder.class">RomaricDrigon\OrchestraBundle\Menu\KnpMenuBuilder</parameter>

        <parameter key="orchestra.twig.orchestra_extension.class">RomaricDrigon\OrchestraBundle\Twig\OrchestraExtension</parameter>
        <parameter key="orchestra.twig.bootstrap_form_extension.class">RomaricDrigon\OrchestraBundle\Twig\BootstrapFormExtension</parameter>

        <parameter key="orchestra.resolver.repository_name.class">RomaricDrigon\OrchestraBundle\Resolver\RepositoryNameResolver</parameter>
        <parameter key="orchestra.resolver.repository_entity.class">RomaricDrigon\OrchestraBundle\Resolver\RepositoryEntity\RepositoryEntityResolver</parameter>
        <parameter key="orchestra.resolver.repository_slug.class">RomaricDrigon\OrchestraBundle\Resolver\RepositorySlug\RepositorySlugResolver</parameter>
        <parameter key="orchestra.resolver.repository_route_name.class">RomaricDrigon\OrchestraBundle\Resolver\RepositoryRouteName\RepositoryRouteNameResolver</parameter>
        <parameter key="orchestra.resolver.listing_header.class">RomaricDrigon\OrchestraBundle\Resolver\ListingHeader\ListingHeaderResolver</parameter>
        <parameter key="orchestra.resolver.hidden_action.class">RomaricDrigon\OrchestraBundle\Resolver\HiddenAction\HiddenActionResolver</parameter>
        <parameter key="orchestra.resolver.entity_route_name.class">RomaricDrigon\OrchestraBundle\Resolver\EntityRouteName\EntityRouteNameResolver</parameter>

        <parameter key="orchestra.finder.entity_finder.class">RomaricDrigon\OrchestraBundle\Finder\EntityFinder</parameter>
        <parameter key="orchestra.finder.entity_loader.class">RomaricDrigon\OrchestraBundle\Finder\EntityLoader</parameter>

        <parameter key="orchestra.symfony.finder.class">Symfony\Component\Finder\Finder</parameter>
        <parameter key="orchestra.symfony.filesystem.class">Symfony\Component\Filesystem\Filesystem</parameter>

        <parameter key="orchestra.event_listener.object_resolver.class">RomaricDrigon\OrchestraBundle\EventListener\ObjectResolverListener</parameter>
        <parameter key="orchestra.event_listener.doctrine_repository.class">RomaricDrigon\OrchestraBundle\EventListener\DoctrineRepositoryListener</parameter>
        <parameter key="orchestra.event_listener.command_resolver.class">RomaricDrigon\OrchestraBundle\EventListener\CommandResolverListener</parameter>
    </parameters>

    <services>
        <!-- core -->
        <service id="orchestra.pool.repository_pool" class="%orchestra.pool.repository_pool.class%">
        </service>
        <service
                id="orchestra.pool.entity_pool"
                class="%orchestra.pool.entity_pool.class%"
                factory-service="orchestra.pool.entity_pool_factory"
                factory-method="createPool"
                >
        </service>
        <service id="orchestra.pool.entity_pool_factory" class="%orchestra.pool.entity_pool_factory.class%">
            <argument type="service" id="orchestra.finder.entity_finder" />
        </service>
        <service id="orchestra.core_repository.action_builder" class="%orchestra.core_repository.action_builder.class%" public="false">
            <argument type="service" id="orchestra.resolver.repository_route_name" />
            <argument type="service" id="orchestra.resolver.hidden_action" />
        </service>
        <service id="orchestra.core_repository.action_collection_builder" class="%orchestra.core_repository.action_collection_builder.class%">
            <argument type="service" id="orchestra.resolver.repository_name" />
            <argument type="service" id="orchestra.core_repository.action_builder" />
        </service>
        <service id="orchestra.core_entity.action_builder" class="%orchestra.core_entity.action_builder.class%" public="false">
            <argument type="service" id="orchestra.resolver.entity_route_name" />
            <argument type="service" id="orchestra.resolver.hidden_action" />
        </service>
        <service id="orchestra.core_entity.action_collection_builder" class="%orchestra.core_entity.action_collection_builder.class%">
            <argument type="service" id="orchestra.core_entity.action_builder" />
        </service>

        <!-- resolver  -->
        <service id="orchestra.resolver.repository_name" class="%orchestra.resolver.repository_name.class%">
            <argument type="service" id="annotation_reader" />
        </service>
        <service id="orchestra.resolver.hidden_action" class="%orchestra.resolver.hidden_action.class%">
            <argument type="service" id="annotation_reader" />
        </service>
        <service id="orchestra.resolver.repository_entity" class="%orchestra.resolver.repository_entity.class%">
            <argument type="service" id="orchestra.pool.entity_pool" />
        </service>
        <service id="orchestra.resolver.repository_slug" class="%orchestra.resolver.repository_slug.class%" />
        <service id="orchestra.resolver.repository_route_name" class="%orchestra.resolver.repository_route_name.class%">
            <argument type="service" id="orchestra.resolver.repository_slug" />
        </service>
        <service id="orchestra.resolver.listing_header" class="%orchestra.resolver.listing_header.class%" />
        <service id="orchestra.resolver.entity_route_name" class="%orchestra.resolver.entity_route_name.class%" />

        <!-- finder and pool factory -->
        <service id="orchestra.finder.entity_finder" class="%orchestra.finder.entity_finder.class%" public="false">
            <argument type="service" id="orchestra.finder.entity_loader" />
        </service>
        <service id="orchestra.finder.entity_loader" class="%orchestra.finder.entity_loader.class%" public="false">
            <argument type="service" id="orchestra.symfony.filesystem" />
        </service>

        <!-- doctrine bridge -->
        <service id="orchestra.doctrine.repository_finder" class="%orchestra.doctrine.repository_finder.class%" public="false">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="orchestra.doctrine.repository_injecter" class="%orchestra.doctrine.repository_injecter.class%">
            <argument type="service" id="orchestra.doctrine.repository_finder" />
        </service>
        <service id="orchestra.doctrine.object_manager" class="%orchestra.doctrine.object_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <!-- routing-related -->
        <service id="orchestra.routing.route_loader" class="%orchestra.routing.route_loader.class%" public="false">
            <argument type="service" id="orchestra.routing.repository_route_collection_builder" />
            <argument type="service" id="orchestra.pool.repository_pool" />
            <argument type="service" id="orchestra.routing.entity_route_collection_builder" />
            <argument type="service" id="orchestra.pool.entity_pool" />
            <tag name="routing.loader" />
        </service>
        <service id="orchestra.routing.repository_route_builder" class="%orchestra.routing.repository_route_builder.class%" public="false">
            <argument type="service" id="orchestra.core_repository.action_collection_builder" />
        </service>
        <service id="orchestra.routing.repository_route_collection_builder" class="%orchestra.routing.repository_route_collection_builder.class%" public="false">
            <argument type="service" id="orchestra.routing.repository_route_builder" />
        </service>
        <service id="orchestra.routing.entity_route_builder" class="%orchestra.routing.entity_route_builder.class%">
            <argument type="service" id="orchestra.core_entity.action_collection_builder" />
        </service>
        <service id="orchestra.routing.entity_route_collection_builder" class="%orchestra.routing.entity_route_collection_builder.class%" public="false">
            <argument type="service" id="orchestra.routing.entity_route_builder" />
        </service>

        <!-- for Twig -->
        <service id="orchestra.twig.orchestra_extension" class="%orchestra.twig.orchestra_extension.class%">
            <argument>%orchestra.app_title%</argument>
            <tag name="twig.extension" />
        </service>
        <service id="orchestra.twig.bootstrap_form_extension" class="%orchestra.twig.bootstrap_form_extension.class%">
            <tag name="twig.extension" />
        </service>

        <!-- (knp) menu-related -->
        <service id="orchestra.menu.repository_menu" class="%orchestra.menu.repository_menu.class%">
            <argument type="service" id="orchestra.pool.repository_pool" />
            <argument type="service" id="orchestra.core_repository.action_collection_builder" />
        </service>
        <service id="orchestra.menu.knp_builder" class="%orchestra.menu.knp_builder.class%">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="orchestra.menu.repository_menu" />
        </service>
        <service
                id="orchestra.menu.main"
                class="Knp\Menu\MenuItem"
                factory-service="orchestra.menu.knp_builder"
                factory-method="createMainMenu"
                scope="request"
        >
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="main" />
        </service>

        <!-- Symfony components -->
        <service id="orchestra.symfony.filesystem" class="%orchestra.symfony.filesystem.class%" />

        <!-- kernel event listeners -->
        <service id="orchestra.event_listener.object_resolver" class="%orchestra.event_listener.object_resolver.class%">
            <argument type="service" id="orchestra.pool.entity_pool" />
            <argument type="service" id="orchestra.pool.repository_pool" />
            <argument type="service" id="orchestra.resolver.repository_entity" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="orchestra.event_listener.doctrine_repository" class="%orchestra.event_listener.doctrine_repository.class%">
            <argument type="service" id="orchestra.doctrine.repository_injecter" />
            <argument type="service" id="orchestra.doctrine.object_manager" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="orchestra.event_listener.command_resolver" class="%orchestra.event_listener.command_resolver.class%">
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
