<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="orchestra.pool.repository_pool.class">RomaricDrigon\OrchestraBundle\Pool\RepositoryPool</parameter>
        <parameter key="orchestra.pool.entity_pool.class">RomaricDrigon\OrchestraBundle\Pool\EntityPool</parameter>
        <parameter key="orchestra.pool.entity_pool_factory.class">RomaricDrigon\OrchestraBundle\Pool\EntityPoolFactory</parameter>
        <parameter key="orchestra.routing.repository_route_builder.class">RomaricDrigon\OrchestraBundle\Routing\RepositoryRouteBuilder</parameter>
        <parameter key="orchestra.routing.repository_route_collection_builder.class">RomaricDrigon\OrchestraBundle\Routing\RepositoryRouteCollectionBuilder</parameter>
        <parameter key="orchestra.routing.route_loader.class">RomaricDrigon\OrchestraBundle\Routing\OrchestraRouteLoader</parameter>
        <parameter key="orchestra.menu.builder.class">RomaricDrigon\OrchestraBundle\Menu\MenuBuilder</parameter>
        <parameter key="orchestra.twig.orchestra_extension.class">RomaricDrigon\OrchestraBundle\Twig\OrchestraExtension</parameter>
        <parameter key="orchestra.pool.repository_name_getter.class">RomaricDrigon\OrchestraBundle\Getter\RepositoryNameGetter</parameter>
        <parameter key="orchestra.finder.entity_finder.class">RomaricDrigon\OrchestraBundle\Finder\EntityFinder</parameter>
    </parameters>

    <services>
        <!-- pool -->
        <service id="orchestra.pool.repository_pool" class="%orchestra.pool.repository_pool.class%">
        </service>
        <service
                id="orchestra.pool.entity_pool"
                class="%orchestra.pool.entity_pool.class%"
                factory-service="orchestra.pool.entity_pool_factory"
                factory-method="createPool"
                >
        </service>

        <!-- getter, or annotation reader -->
        <service id="orchestra.getter.repository_name_getter" class="%orchestra.pool.repository_name_getter.class%">
            <argument type="service" id="annotation_reader" />
        </service>

        <!-- finder and pool factory -->
        <service id="orchestra.finder.entity_finder" class="%orchestra.finder.entity_finder.class%">
        </service>
        <service id="orchestra.pool.entity_pool_factory" class="%orchestra.pool.entity_pool_factory.class%">
            <argument type="service" id="orchestra.finder.entity_finder" />
        </service>

        <!-- routing-related -->
        <service id="orchestra.routing.route_loader" class="%orchestra.routing.route_loader.class%" public="false">
            <argument type="service" id="orchestra.routing.repository_route_collection_builder" />
            <argument type="service" id="orchestra.pool.repository_pool" />
            <tag name="routing.loader" />
        </service>
        <service id="orchestra.routing.repository_route_builder" class="%orchestra.routing.repository_route_builder.class%">
        </service>
        <service id="orchestra.routing.repository_route_collection_builder" class="%orchestra.routing.repository_route_collection_builder.class%" public="false">
            <argument type="service" id="orchestra.routing.repository_route_builder" />
        </service>

        <!-- for Twig -->
        <service id="orchestra.twig.orchestra_extension" class="%orchestra.twig.orchestra_extension.class%">
            <argument>%orchestra.app_title%</argument>
            <tag name="twig.extension" />
        </service>

        <!-- (knp) menu-related -->
        <service id="orchestra.menu.builder" class="%orchestra.menu.builder.class%">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="orchestra.pool.repository_pool" />
            <argument type="service" id="orchestra.routing.repository_route_builder" />
            <argument type="service" id="orchestra.getter.repository_name_getter" />
        </service>
        <service
                id="orchestra.menu.main"
                class="Knp\Menu\MenuItem"
                factory-service="orchestra.menu.builder"
                factory-method="createMainMenu"
                scope="request"
        >
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="main" />
        </service>
    </services>
</container>
